<Window x:Class="EP_01___1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EP_01___1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Name="Botón1" Content="1er Botó" Width="100" Height="100" 
                Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Button Name="Botón2" Content="2on Botó" Width="100" Height="100" 
                Margin="10" VerticalAlignment="Top" HorizontalAlignment="Right" Click="Botón2_Click"/>
        <CheckBox Name="checkbox" Content="CheckBox" Width="100" VerticalAlignment="Center"
                  HorizontalAlignment="Center" Checked="checkbox_Checked" Unchecked="checkbox_Unchecked_1"/>
        <Label Name="Label1" Content="" VerticalAlignment="Center"
               HorizontalAlignment="Right" Margin="10" Height="200"/>
    </Grid>
</Window>
